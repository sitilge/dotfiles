conky.config = {
	lua_load = '.conky_cpu.lua',
	lua_load = '.conky_part.lua',

	alignment = 'top_right',
	background = true,
	update_interval = 2.0,
	total_run_times = 0,
	use_xft = true,
	own_window = true,
	own_window_transparent = true,
	own_window_type = 'normal',
	own_window_hints = 'undecorated,below,skip_pager,skip_taskbar',
	own_window_class = 'conky',
	own_window_argb_visual = true,
	double_buffer = true,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = true,
	gap_x = 10,
	gap_y = 10,
	no_buffers = true,
	uppercase = false,
	cpu_avg_samples = 2,
	override_utf8_locale = false,
};

conky.text = [[
${font sans-serif:bold:size=8}${color FFCC00}\
SYSTEM $stippled_hr
${font sans-serif:normal:size=8}${color FFFFCC}\
Host: $alignr $nodename
Arch: $alignr $machine
Kernel: $alignr $kernel
Uptime: $alignr $uptime
Procs: $alignr $processes
Running: $alignr $running_processes

${font sans-serif:bold:size=8}${color FFCC00}\
CPU $stippled_hr
${font sans-serif:normal:size=8}${color FFFFCC}\
${cpugraph 25,0 -t}
${lua_parse conky_cpu}

${font sans-serif:bold:size=8}${color FFCC00}\
TOP CPU $stippled_hr
${font sans-serif:normal:size=8}${color FFFFCC}\
${top name 1} $alignr ${top cpu 1} %
${top name 2} $alignr ${top cpu 2} %
${top name 3} $alignr ${top cpu 3} %
${top name 4} $alignr ${top cpu 4} %

${font sans-serif:bold:size=8}${color FFCC00}\
TOP MEM $stippled_hr
${font sans-serif:normal:size=8}${color FFFFCC}\
${top_mem name 1} $alignr ${top_mem mem 1} %
${top_mem name 2} $alignr ${top_mem mem 2} %
${top_mem name 3} $alignr ${top_mem mem 3} %
${top_mem name 4} $alignr ${top_mem mem 4} %

${font sans-serif:bold:size=8}${color FFCC00}\
MEM $stippled_hr
${font sans-serif:normal:size=8}${color FFFFCC}\
${lua_parse conky_part}
RAM: $alignr $mem / $memmax $memperc %
SWAP: $alignr $swap / $swapmax $swapperc %

${font sans-serif:bold:size=8}${color FFCC00}\
IO $stippled_hr
${font sans-serif:normal:size=8}${color FFFFCC}Read: $alignr $diskio_read
${diskiograph_read 20,0 -t}
${font sans-serif:normal:size=8}${color FFFFCC}Write: $alignr $diskio_write
${diskiograph_write 20,0 -t}
${font sans-serif:normal:size=8}${color FFFFCC}\
/ $alignr ${fs_used /} / ${fs_size /} ${fs_used_perc /} %
/home $alignc ${fs_used /home} / ${fs_size /home} ${fs_used_perc /} %

${if_up wlp3s0b1}${font sans-serif:bold:size=8}${color FFCC00}\
NET $stippled_hr
${font sans-serif:normal:size=8}${color FFFFCC}\
Down: $alignr ${downspeed wlp3s0b1}/s
${downspeedgraph wlp3s0b1 20,0 -t}
${font sans-serif:normal:size=8}${color FFFFCC}\
Up: $alignr ${upspeed wlp3s0b1}/s
${upspeedgraph wlp3s0b1 20,0 -t}
${else}${if_up enp2s0f0}${font sans-serif:bold:size=8}${color FFCC00}\
NET $stippled_hr
${font sans-serif:normal:size=8}${color FFFFCC}\
Down: $alignr ${downspeed enp2s0f0}/s
${downspeedgraph enp2s0f0 20,0 -t}
${font sans-serif:normal:size=8}${color FFFFCC}\
Up: $alignr ${upspeed enp2s0f0}/s
${upspeedgraph enp2s0f0 20,0 -t}
${endif}${endif}
]];
